{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ESNext",
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "es6", "DOM"],
    "target": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "noImplicitAny": true,
    "strict": true,
    "rootDir": "./"
  },
  "include": ["./src/**/*.ts"]
}
